<% include ../partials/header.ejs %>
<h1 class="text-center">Edit <%=campground.name%></h1>
<div style="width:30%;margin:25px auto">
    <form action="/campgrounds/<%=campground._id%>/comments?_method=PUT" method="POST">
      <div class="form-group"><label >Enter Name</label>
         <input type="text" name="campground[name]" class="form-control" value="<%=campground.name%>">
      </div>
      <div class="form-group">
         <label>Enter Image Url</label>
          <input type="text" name="campground[image]" class="form-control" value="<%=campground.img%>">
      </div>
       <div class="form-group">
         <label>Enter Description</label>
          <input type="text" name="campground[description]" class="form-control" value="<%=campground.description%>">
      </div>
        <button class="btn btn-primary btn-sm">Submit!</button>
     </form>
     <a href="/campgrounds">Go Back</a>
</div>
<% include ../partials/footer.ejs %>